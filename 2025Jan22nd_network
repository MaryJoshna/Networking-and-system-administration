cscuser@cscuser:~$ more server.csr

cscuser@cscuser:~$ 

cscuser@cscuser:~$ mv server.csr csc405.key.csr

cscuser@cscuser:~$ openssl x509 -req -days 30 -in csc405key.csr -signkey csc405key.key -out csc405key.crt

